{
  "name": "openanimeapi",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "build": "swc src -d dist",
    "build-dev": "bun run build && NODE_ENV=development node --inspect dist/server.js",
    "dev": "nodemon -L --ext ts --exec \"bun run build-dev\"",
    "start": "bun run build && NODE_ENV=production node dist/server.js",
    "test": "NODE_ENV=test jest --setupFiles dotenv/config --runInBand",
    "reset:npm": "rm -rf node_modules && bun install"
  },
  "type": "module",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.7",
    "bcrypt": "^5.1.1",
    "bignumber.js": "^9.1.2",
    "chalk": "^5.3.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "typeorm": "^0.3.20",
    "validate.js": "^0.13.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "1.3.75",
    "@swc/jest": "^0.2.29",
    "@swc/types": "^0.1.5",
    "@types/chalk": "^2.2.0",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.25",
    "@types/supertest": "^6.0.2",
    "bun-types": "^1.0.30",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-jest-resolver": "^2.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.4.2"
  }
}
