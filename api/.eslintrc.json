{
    "$schema": "https://json.schemastore.org/eslintrc",
    "root": true,
    "env": { "es6": true },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-extra-semi": "off"
    }
}